      :css
        img, div, input { behavior: url("iepngfix.htc") }
  %body
    %header
      %img{ src: 'logo-trans.png', alt: 'NRG TV Team', title: 'NRG TV Team' }
    = yield
    %footer
      &copy; 2011 NRG TV Team
    .javascripts
      %script{ type: "text/javascript", src: "/javascripts/shadowbox/shadowbox.js" }
      :javascript
        Shadowbox.init();
